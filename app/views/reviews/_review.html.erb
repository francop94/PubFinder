<li id="review-<%= review.id %>">
  <span class="review"><%= link_to review.user.name, review.user %> voted <%= review.vote %></span>
  <span class="content"><%= review.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(review.created_at) %> ago.
  </span>
      <% if current_user.admin? or review.user == current_user %>
    | <%= link_to "delete", review, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
        <% if review.user == current_user %>
    | <%= link_to "edit", edit_review_path(review) %>
  <% end %>

   <% if logged_in? %>
    | <%= link_to "Answers"+'('+review.answers.count.to_s+')', review_path(review)  %>
  <% end %>

</li>
