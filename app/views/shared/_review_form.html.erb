<%= form_for([@pub, @review]) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :vote %>
    <%= f.select :vote, [1,2,3,4,5] %>
    <%= f.text_area :content, placeholder: "Compose new review..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
