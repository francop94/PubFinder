<% provide(:title, 'Create your own pub') %>
<h1>Create your own pub</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@pub) do |f| %>
     <%-#  <%= render 'shared/error_messages' -%>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>


      <%= f.submit "Create my pub", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>